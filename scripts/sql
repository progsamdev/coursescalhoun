DROP TABLE IF EXISTS users;


/*------CREATE TABLES------------*/
CREATE TABLE users (
    id SERIAL PRIMARY KEY,
    age INT,
    first_name TEXT,
    last_name TEXT,
    email TEXT UNIQUE NOT NULL
);


